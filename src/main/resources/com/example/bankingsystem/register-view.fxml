<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.bankingsystem.DatabaseManager"
      spacing="10" alignment="CENTER"
      style="-fx-background-color: white; -fx-padding: 20;" 
      prefWidth="400" prefHeight="350">

    <Label text="Register" style="-fx-font-size: 20px;">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </Label>

    <TextField fx:id="usernameField" promptText="Username" prefWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="250"/>

    <Label fx:id="messageLabel" textFill="red" wrapText="true" maxWidth="250"/>
    <Button text="Register" onAction="#registerUser" prefWidth="150" style="-fx-font-size: 14px;" />
    <Button text="Back" onAction="#handleBackToWelcome" prefWidth="150" style="-fx-font-size: 14px;" />
</VBox>
